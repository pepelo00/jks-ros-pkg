<launch>
 
  <arg name="debug" default="false" />
  <arg name="stereo" default="false"/>

  <arg if="$(arg debug)"      name="prefix" value="xterm -e gdb -ex run --args" />
  <arg unless="$(arg debug)"  name="prefix" value="" />
 
  <include file="$(find haptic_ghosted_gripper)/launch/haptics_frames.launch" />

  <node pkg="haptic_ghosted_gripper" type="haptic_ghosted_gripper_node" name="pr2_ghosted_gripper" launch-prefix="$(arg prefix)" output="screen">
  
    <rosparam>
      voxel_size: 0.002
      synthetic_noise: 0.0
      tool_radius: 0.005
      radius_multiple: 2.0
      publish_cloud: false
    </rosparam>
  </node>

</launch>
